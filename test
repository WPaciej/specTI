#include <iostream>
#include <cstring> // Potrzebne dla funkcji związanych z łańcuchami znaków

struct Wydarzenie {
    int godzina;           // Godzina wydarzenia (np. 0 - 23)
    int minuty;            // Minuty wydarzenia (np. 0 - 59)
    char nazwa[40];        // Nazwa wydarzenia, maksymalnie 39 znaków + 1 na znak końca '\0'
};

int main() {
    Wydarzenie event; // Deklaracja zmiennej typu Wydarzenie

    // Przykładowe przypisanie wartości do pól
    event.godzina = 14;
    event.minuty = 30;
    std::strcpy(event.nazwa, "Spotkanie z przyjacielem"); // Kopiowanie ciągu znaków

    // Wyświetlanie zawartości struktury
    std::cout << "Godzina: " << event.godzina << ":" 
              << (event.minuty < 10 ? "0" : "") << event.minuty << "\n";
    std::cout << "Nazwa: " << event.nazwa << "\n";

    return 0;
}
