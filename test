#ifndef MACIERZ_H
#define MACIERZ_H

#include <vector>
#include <string>
#include <tuple>

using Macierz = std::vector<std::vector<int>>;

Macierz wczytajMacierz(const std::string& nazwaPliku);
std::pair<int, int> wymiaryMacierzy(const Macierz& macierz);
int sumaElementow(const Macierz& macierz);
double sredniaElementow(const Macierz& macierz);
int sumaPrzekatnej(const Macierz& macierz, bool glownaPrzekatna = true);
bool czyMacierzZerowa(const Macierz& macierz);

#endif
